<Window x:Class="KombitWpfOIDC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KombitWpfOIDC"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="Windows Application" WindowState="Maximized" Background="#141B34">

    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                <GradientStop Color="#41518f" Offset="0"/>
                <GradientStop Color="#2c386c" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <!-- ===================== LOGIN VIEW ===================== -->
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True"  Padding="4,0,0,0" HorizontalScrollBarVisibility="Disabled">
                    <Border Padding="36" >
                        <Grid>
                            <Border CornerRadius="24"  Width="400" Height="500">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#223266" Offset="0"/>
                                        <GradientStop Color="#27396b" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Border Width="85" Height="85" CornerRadius="24" Margin="0,0,0,50">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                                <GradientStop Color="#7f8cf1" Offset="0"/>
                                                <GradientStop Color="#d3b7ff" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="LOGO" Foreground="{StaticResource Txt}" FontWeight="Bold"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock x:Name="Message" Foreground="{StaticResource TxtDim}"
                                       FontSize="16" TextAlignment="Center" Margin="0,0,0,25"><Run Text="OIDC Windows App"/><Run/></TextBlock>

                                    <StackPanel Margin="0,0,0,20">
                                        <TextBlock Text="Assurance Level" Margin="0,0,0,10" Foreground="#ccd7ff" FontWeight="SemiBold"  FontSize="13"/>
                                        <Border CornerRadius="8" Margin="0 0 0 10" Background="#FFFFFF"  Padding="0" Width="320px">
                                            <ComboBox x:Name="AssuranceLevelCombo" Style="{StaticResource ComboBox}" FontSize="12" Height="37px">
                                                <ComboBoxItem Content="" IsSelected="True"/>
                                                <ComboBoxItem Content="https://data.gov.dk/concept/core/nsis/loa/High"/>
                                                <ComboBoxItem Content="https://data.gov.dk/concept/core/nsis/loa/Low"/>
                                                <ComboBoxItem Content="https://data.gov.dk/concept/core/nsis/loa/Substantial"/>
                                                <ComboBoxItem Content="urn:dk:gov:saml:attribute:AssuranceLevel:1"/>
                                                <ComboBoxItem Content="urn:dk:gov:saml:attribute:AssuranceLevel:2"/>
                                                <ComboBoxItem Content="urn:dk:gov:saml:attribute:AssuranceLevel:3"/>
                                                <ComboBoxItem Content="urn:dk:gov:saml:attribute:AssuranceLevel:4"/>
                                            </ComboBox>
                                        </Border>
                                        <TextBlock Text="max_age" Margin="0,0,0,6" Foreground="#ccd7ff" FontWeight="SemiBold"  FontSize="12"/>
                                        <Border CornerRadius="8" Background="#FFFFFF" Padding="10" Width="320px">
                                            <TextBox x:Name="MaxAgeBox" BorderThickness="0"  Foreground="#2A3E78" BorderBrush="#2A3E78" Text=""
                                        local:NumberOnlyBehavior.IsEnabled="True" FontSize="13"/>
                                        </Border>
                                    </StackPanel>

                                    <DockPanel LastChildFill="True">
                                        <Button x:Name="Login" DockPanel.Dock="Top" Content="LOGIN" Style="{StaticResource loginButton}" 
                                            Background="#5b60c4" Foreground="#ffffff"
                                    Click="BtnLogin_Click" Height="40" FontWeight="Bold"/>
                                    </DockPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </ScrollViewer>
            </Grid>

            <!-- ===================== (AFTER LOGIN) ===================== -->
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- LEFT SIDEBAR -->
                    <Border Grid.RowSpan="2" CornerRadius="0" Padding="0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#223266" Offset="0"/>
                                <GradientStop Color="#27396b" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <StackPanel  DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,18">
                                <Border Width="44" Height="44" CornerRadius="12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                            <GradientStop Color="#7f8cf1" Offset="0"/>
                                            <GradientStop Color="#d3b7ff" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <StackPanel Margin="10 0 0 0" VerticalAlignment="Center">
                                    <TextBlock Text="WPF Application" FontSize="15" Foreground="#7788bf"/>
                                    <TextBlock Text="{Binding ClientId}" FontSize="11" Foreground="#7788bf"/>
                                </StackPanel>
                            </StackPanel>

                            <Separator Height="0.8" Margin="15 0 15 28" Background="#46558a"/>

                            <Button x:Name="BtnIDToken" Style="{StaticResource menuButtonActive}" Click="ShowIDToken">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="Database" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="ID Token" Style="{StaticResource menuButtonText}"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="BtnAccessToken" Style="{StaticResource menuButton}" Click="ShowAccessToken">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="FileCode" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Access Token" Style="{StaticResource menuButtonText}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- HEADER -->
                    <Border Grid.Column="1" CornerRadius="14" Padding="18" Margin="15,15,15,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Row 1: User Info and Action Buttons -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- User Info -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Width="28" Height="28" CornerRadius="8" Background="#223266"/>
                                    <TextBlock Text="{Binding Subject}" Foreground="#ccd7ff" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                            </Grid>

                            <!-- Row 2: Authentication Parameters -->
                            <Grid Grid.Row="1">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <StackPanel Margin="0,0,20,0">
                                        <TextBlock Text="Assurance Level" Margin="0,0,0,6" Foreground="#ccd7ff" FontWeight="SemiBold" FontSize="12"/>
                                        <Border CornerRadius="8" Background="#FFFFFF" Padding="0" MinWidth="280">
                                            <ComboBox Style="{StaticResource ComboBox}" FontSize="12" Height="35"
                                                      SelectedIndex="{Binding ElementName=AssuranceLevelCombo, Path=SelectedIndex, Mode=TwoWay}">
                                                <ComboBoxItem Content=""/>
                                                <ComboBoxItem Content="https://data.gov.dk/concept/core/nsis/loa/High"/>
                                                <ComboBoxItem Content="https://data.gov.dk/concept/core/nsis/loa/Low"/>
                                                <ComboBoxItem Content="https://data.gov.dk/concept/core/nsis/loa/Substantial"/>
                                                <ComboBoxItem Content="urn:dk:gov:saml:attribute:AssuranceLevel:1"/>
                                                <ComboBoxItem Content="urn:dk:gov:saml:attribute:AssuranceLevel:2"/>
                                                <ComboBoxItem Content="urn:dk:gov:saml:attribute:AssuranceLevel:3"/>
                                                <ComboBoxItem Content="urn:dk:gov:saml:attribute:AssuranceLevel:4"/>
                                            </ComboBox>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="max_age" Margin="0,0,0,6" Foreground="#ccd7ff" FontWeight="SemiBold" FontSize="12"/>
                                        <Border CornerRadius="8" Background="#FFFFFF" Padding="10" Width="120">
                                            <TextBox BorderThickness="0" Foreground="#2A3E78" BorderBrush="#2A3E78"
                                                     Text="{Binding ElementName=MaxAgeBox, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     local:NumberOnlyBehavior.IsEnabled="True" FontSize="13"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Action Buttons -->
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                        <Button Style="{StaticResource topMenuButton}" Background="#5b60c4" Foreground="#ffffff"
                                            Click="ReAuth" Margin="5,0">
                                            <TextBlock Text="Re-authenticate" Foreground="#f2f2f2" FontSize="13"/>
                                        </Button>
                                        <Button Style="{StaticResource topMenuButton}" Background="#5b60c4" Foreground="#ffffff"
                                            Click="ForceAuth" Margin="5,0">
                                            <TextBlock Text="Force Authentication" Foreground="#f2f2f2" FontSize="13"/>
                                        </Button>
                                        <Button Style="{StaticResource topMenuButton}" Background="#5b60c4" Foreground="#ffffff"
                                            Click="PassiveAuth" Margin="5,0">
                                            <TextBlock Text="Passive Authentication" Foreground="#f2f2f2" FontSize="13"/>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- MAIN CONTENT -->

                    <Border Grid.Column="1" Grid.Row="1" CornerRadius="20" Margin="20,0,20,20" >
                        <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True"  Padding="4,0,0,0" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Orientation="Vertical">
                                <!-- TOKEN Section -->
                                <StackPanel Margin="0 0 0 20">
                                    <Grid Margin="0 0 0 7">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Foreground="#ccd7ff" FontSize="13" Text="TOKEN" FontWeight="DemiBold"/>
                                        <Button x:Name="BtnCopyToken" Grid.Column="1" Content="Copy" Foreground="#f2f2f2" FontSize="11" 
                                                Background="#5b60c4" BorderThickness="0" Padding="10,5" 
                                                Cursor="Hand" Click="CopyToken_Click"
                                                ToolTip="Copy token to clipboard">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#7580d4"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                    <Border CornerRadius="10" Background="#243771" Padding="10">
                                        <TextBlock x:Name="TxtLog" TextWrapping="Wrap" Foreground="#ccd7ff" FontSize="13"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Margin="0 0 0 20">
                                    <TextBlock Foreground="#ccd7ff" FontSize="13" Text="HEADER" Margin="0 0 0 7" FontWeight="DemiBold"/>
                                    <Border CornerRadius="10" Background="#243771" Padding="10">
                                        <TextBlock x:Name="TxtHeader" TextWrapping="Wrap" Foreground="#ccd7ff" FontSize="13"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Margin="0 0 0 0">
                                    <TextBlock Foreground="#ccd7ff" FontSize="13" Text="PAYLOAD" Margin="0 0 0 7" FontWeight="DemiBold"/>
                                    <Border CornerRadius="10" Background="#243771" Padding="10">
                                        <TextBlock x:Name="TxtPayload" TextWrapping="Wrap" Foreground="#ccd7ff" FontSize="13"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

    </Border>
</Window>
